<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/wallpaper_remind">


        <AnalogClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_baseline_add_alarm_24"
            android:id="@+id/setReminder"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_centerInParent="true"
            android:text="Set Reminder"
            android:textColor="@color/white"
            app:iconTint="@color/white"
            app:rippleColor="@color/white"
            android:textSize="25sp"
            android:shadowColor="@color/white"
            app:strokeColor="@color/white"
            android:textAllCaps="false"
            android:onClick="setRemind"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_baseline_battery_charging_full_24"
            android:id="@+id/checkCharging"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_below="@id/setReminder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:text="Is Charging"
            android:textColor="@color/white"
            app:iconTint="@color/white"
            app:rippleColor="@color/white"
            android:textSize="25sp"
            android:shadowColor="@color/white"
            app:strokeColor="@color/white"
            android:textAllCaps="false"
            android:onClick="checkCharging"/>


</RelativeLayout>